generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  provider      String?
  uid           String?
  currency      String    @default("SGD")
  createdAt     DateTime  @default(now()) @map("inserted_at")
  updatedAt     DateTime  @updatedAt      @map("updated_at")

  accounts              Account[]
  sessions              Session[]
  tags                  Tag[]
  portfolios            Portfolio[]
  portfolioTransactions PortfolioTransaction[]
  portfolioPositions    PortfolioPosition[]
  realizedProfits       RealizedProfit[]
  assetTags             AssetTag[]
  portfolioSnapshots    PortfolioSnapshot[]

  @@unique([provider, uid])
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Asset {
  id                     Int       @id @default(autoincrement())
  name                   String    @unique
  priceUrl               String?   @map("price_url")
  price                  Decimal?  @db.Decimal(15, 4)
  priceCurrency          String?   @map("price_currency")
  currency               String
  distributesDividends   Boolean   @default(false) @map("distributes_dividends")
  dividendUrl            String?   @map("dividend_url")
  dividendWithholdingTax Decimal?  @db.Decimal(5, 4) @map("dividend_withholding_tax")
  priceUpdatedAt         DateTime? @map("price_updated_at")
  dividendUpdatedAt      DateTime? @map("dividend_updated_at")
  createdAt              DateTime  @default(now()) @map("inserted_at")
  updatedAt              DateTime  @updatedAt      @map("updated_at")

  assetTags             AssetTag[]
  dividends             Dividend[]
  portfolioTransactions PortfolioTransaction[]
  portfolioPositions    PortfolioPosition[]
  realizedProfits       RealizedProfit[]

  @@map("assets")
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("inserted_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  assetTags     AssetTag[]
  portfolioTags PortfolioTag[]

  @@unique([userId, name])
  @@map("tags")
}

model AssetTag {
  id        Int      @id @default(autoincrement())
  assetId   Int      @map("asset_id")
  tagId     Int      @map("tag_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("inserted_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  asset Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([assetId, tagId, userId])
  @@map("asset_tags")
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("inserted_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  portfolioTags PortfolioTag[]

  @@unique([userId, name])
  @@map("portfolios")
}

model PortfolioTag {
  id          Int      @id @default(autoincrement())
  portfolioId Int      @map("portfolio_id")
  tagId       Int      @map("tag_id")
  createdAt   DateTime @default(now()) @map("inserted_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")

  portfolio Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@map("portfolio_tags")
}

model PortfolioTransaction {
  id              Int                            @id @default(autoincrement())
  userId          String                         @map("user_id")
  assetId         Int                            @map("asset_id")
  action          String
  quantity        Decimal                        @db.Decimal(15, 6)
  price           Unsupported("money_with_currency")
  commission      Unsupported("money_with_currency")
  amount          Unsupported("money_with_currency")
  transactionDate DateTime                       @map("transaction_date")
  notes           String?                        @db.Text
  createdAt       DateTime                       @default(now()) @map("inserted_at")
  updatedAt       DateTime                       @updatedAt      @map("updated_at")

  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset             Asset              @relation(fields: [assetId], references: [id], onDelete: Cascade)
  portfolioPosition PortfolioPosition?
  realizedProfit    RealizedProfit?

  @@map("portfolio_transactions")
}

model PortfolioPosition {
  id                     Int                            @id @default(autoincrement())
  userId                 String                         @map("user_id")
  assetId                Int                            @map("asset_id")
  portfolioTransactionId Int                            @unique @map("portfolio_transaction_id")
  averagePrice           Unsupported("money_with_currency") @map("average_price")
  quantityOnHand         Decimal                        @db.Decimal(15, 6) @map("quantity_on_hand")
  amountOnHand           Unsupported("money_with_currency") @map("amount_on_hand")
  createdAt              DateTime                       @default(now()) @map("inserted_at")
  updatedAt              DateTime                       @updatedAt      @map("updated_at")

  user                 User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset                Asset                @relation(fields: [assetId], references: [id], onDelete: Cascade)
  portfolioTransaction PortfolioTransaction @relation(fields: [portfolioTransactionId], references: [id], onDelete: Cascade)

  @@map("portfolio_positions")
}

model RealizedProfit {
  id                     Int                            @id @default(autoincrement())
  userId                 String                         @map("user_id")
  assetId                Int                            @map("asset_id")
  portfolioTransactionId Int?                           @unique @map("portfolio_transaction_id")
  dividendId             Int?                           @map("dividend_id")
  amount                 Unsupported("money_with_currency")
  createdAt              DateTime                       @default(now()) @map("inserted_at")
  updatedAt              DateTime                       @updatedAt      @map("updated_at")

  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  asset                Asset                 @relation(fields: [assetId], references: [id], onDelete: Cascade)
  portfolioTransaction PortfolioTransaction? @relation(fields: [portfolioTransactionId], references: [id], onDelete: Cascade)
  dividend             Dividend?             @relation(fields: [dividendId], references: [id], onDelete: SetNull)

  @@map("realized_profits")
}

model Dividend {
  id        Int       @id @default(autoincrement())
  assetId   Int       @map("asset_id")
  exDate    DateTime  @db.Date @map("ex_date")
  payDate   DateTime? @db.Date @map("pay_date")
  value     Decimal   @db.Decimal(15, 4)
  currency  String
  createdAt DateTime  @default(now()) @map("inserted_at")
  updatedAt DateTime  @updatedAt      @map("updated_at")

  asset           Asset            @relation(fields: [assetId], references: [id], onDelete: Cascade)
  realizedProfits RealizedProfit[]

  @@unique([assetId, exDate])
  @@map("dividends")
}

model PortfolioSnapshot {
  id           Int                            @id @default(autoincrement())
  userId       String                         @map("user_id")
  snapshotDate DateTime                       @db.Date @map("snapshot_date")
  totalValue   Unsupported("money_with_currency") @map("total_value")
  createdAt    DateTime                       @default(now()) @map("inserted_at")
  updatedAt    DateTime                       @updatedAt      @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, snapshotDate])
  @@map("portfolio_snapshots")
}
